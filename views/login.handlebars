<div class="panel panel-default" id="chat-login">
  <h3 class="text-center">Chat Login</h3>
  <div class="panel-body" id="all-messages">
    <form id="form-chat-login" method="POST" action="/chat">
      <div class="form-group">
        <label for="nick-name">Nick Name</label>
        <input type="text" class="form-control" id="nick-name" name="nick-name" placeholder="Nick Name" value="">
      </div>
      <div class="form-group text-center">
        <button type="button" id="btn-chat-login" name="btn-chat-login" class="btn btn-default btn-primary">ENTER</button>
      </div>
    </form>
  </div>
</div>

<script>
window.addEventListener('load', function(){
  $('#nick-name').focus();
  
  $('#btn-chat-login').click(function(){
    var nickName = $('#nick-name').val();

    if(nickName != '') {
      $('#form-chat-login').submit();
    }
  });
});
</script>
